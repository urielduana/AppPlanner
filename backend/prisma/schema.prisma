// To create the Prisma and NestJS setup, follow the documentation:
// https://docs.nestjs.com/recipes/prisma#getting-started

generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "sqlite"
}

// Models

// User Model
model User {
  // Primary Key
  id        Int      @id @default(autoincrement()) 
  email     String   @unique
  password  String
  name      String
  // Relationships
  tasks     Task[]
  // Timestamps
  createdAt DateTime @default(now())
}

model Task {
  // Primary Key
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  completed   Boolean  @default(false)
  dueDate     DateTime?
  category    String?
  // Relationships
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  // Timestamps
  createdAt   DateTime @default(now())
}
